{
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "automergeStrategy": "merge-commit",
  "ignoreTests": true,
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["kroxylicious-kms-provider-hashicorp-vault-test-support/src/main/java/io/kroxylicious/kms/provider/hashicorp/vault/VaultTestKmsFacade.java"],
      "matchStrings": [
        "DockerImageName\\.parse\\(\"hashicorp/vault:(?<currentValue>\\d+\\.\\d+)\"\\)"
      ],
      "depNameTemplate": "hashicorp/vault",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["performance-tests/docker-compose.yaml"],
      "matchStrings": [
        "hashicorp/vault:(?<currentValue>\\d+\\.\\d+)"
      ],
      "depNameTemplate": "hashicorp/vault",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["kroxylicious-kms-provider-aws-kms-test-support/src/main/java/io/kroxylicious/kms/provider/aws/kms/AwsKmsTestKmsFacade.java"],
      "matchStrings": [
        "DockerImageName\\.parse\\(\"localstack/localstack:(?<currentValue>\\d+\\.\\d+)\"\\)"
      ],
      "depNameTemplate": "localstack/localstack",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["kroxylicious-integration-tests/src/test/java/io/kroxylicious/proxy/filter/oauthbearer/OauthBearerValidationIT.java"],
      "matchStrings": [
        "DockerImageName\\.parse\\(\"ghcr.io/navikt/mock-oauth2-server:(?<currentValue>\\d+\\.\\d+)\"\\)"
      ],
      "depNameTemplate": "ghcr.io/navikt/mock-oauth2-server",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["kroxylicious-integration-tests/src/test/java/io/kroxylicious/proxy/filter/validation/JsonSchemaRecordValidationIT.java"],
      "matchStrings": [
        "DockerImageName\\.parse\\(\"quay.io/apicurio/apicurio-registry-mem:(?<currentValue>\\d+\\.\\d+\\.\\d+\\.Final)"
      ],
      "depNameTemplate": "quay.io/apicurio/apicurio-registry-mem",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["kroxylicious-systemtests/src/main/java/io/kroxylicious/systemtests/Constants.java"],
      "matchStrings": [
        "kroxylicious/kcat:(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "quay.io/kroxylicious/kcat",
      "datasourceTemplate": "docker"
    }
  ]
}
